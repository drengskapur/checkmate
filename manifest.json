{
  "manifest_version": 3,
  "name": "CheckMate",
  "version": "1.0.8",
  "description": "Streamline Your Checklists and Workflows",
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "permissions": ["storage", "activeTab"],
  "icons": {
    "16": "src/assets/images/logo-icon.svg",
    "48": "src/assets/images/logo-icon.svg",
    "128": "src/assets/images/logo-icon.svg"
  },
  "background": {
    "service_worker": "src/background/index.ts"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
