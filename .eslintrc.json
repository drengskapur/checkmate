{
  "root": true,
  "extends": "standard",
  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "globals": {
    "chrome": "readonly",
    "window": "readonly"
  },
  "rules": {
    "no-undef": "error",
    "no-unused-vars": "warn"
  }
}
