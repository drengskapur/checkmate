{
  "manifest_version": 3,
  "name": "CheckMate",
  "version": "1.0.8",
  "description": "Streamline Your Checklists and Workflows",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage", "activeTab"],
  "icons": {
    "16": "images/logo-icon.svg",
    "48": "images/logo-icon.svg",
    "128": "images/logo-icon.svg"
  },
  "background": {
    "service_worker": "background.js"
  }
}

