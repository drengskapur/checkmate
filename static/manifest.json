{
  "manifest_version": 3,
  "name": "CheckMate",
  "version": "1.0",
  "description": "A Chrome extension for managing checklists",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/logo-icon.svg",
      "48": "images/logo-icon.svg",
      "128": "images/logo-icon.svg"
    }
  },
  "permissions": ["storage"],
  "icons": {
    "16": "images/logo-icon.svg",
    "48": "images/logo-icon.svg",
    "128": "images/logo-icon.svg"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
